[user]
	name = tomdaly
	email = tomdaly@users.noreply.github.com
[core]
	editor = nvim
	excludesFile = ~/.gitignore_global
	hooksPath = ~/.git_hooks_global
[gpg]
	program = /opt/homebrew/bin/gpg
[commit]
	gpgsign = true
[pull]
	ff = only
[push]
	autoSetupRemote = true
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[diff]
	external = difft
[difft]
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[pager]
	difftool = true
