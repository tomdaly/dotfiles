    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -d \"Claude needs your attention\" ntfy.sh/${NTFY_TOPIC}"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -d \"Claude has finished responding\" ntfy.sh/${NTFY_TOPIC}"
